
source "http://rubygems.org"

ruby "2.0.0"

gem "rack-ssl"
gem "open-uri-cached"

#
# Sinatra
#
gem "sinatra"
gem "sinatra-contrib"

#
# Assets
#
gem "haml"
gem "sass"
gem "coffee-script"

#
# Authentication
#
gem "omniauth"
gem "omniauth-tumblr"

#
# Persistence
#
gem "dm-core"
gem "dm-migrations"
gem "dm-timestamps"
gem "dm-sqlite-adapter", group: :development
gem "dm-postgres-adapter", group: :production

#
# Tumblr API Client
#
gem "tumblr_client"

#
# Sentry (for Error Reporting)
#
gem "sentry-raven", git: "https://github.com/getsentry/raven-ruby.git"
